{
  "name": "dbfreader2",
  "version": "1.0.0",
  "description": "dbf to sql",
  "license": "ISC",
  "author": "bruno justino",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && electron .",
    "dev": "vite",
    "build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.brunojustino.syncapp",
    "productName": "DBF Sync Tool",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.brunojustino.com/sync-tool/"
      }
    ]
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dbffile": "^1.12.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "mysql2": "^3.16.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^25.0.10",
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-static-copy": "^3.2.0"
  }
}
